
{
    "extends": "airbnb",
    "env": {
        "node": true,
        "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script",
      "ecmaFeatures": {
        "modules": false
      }
    },
    "rules": {
      "strict": [2, "global"],
      "no-bitwise": 0,
      "no-plusplus": 0,
      "max-len": [1, 120, 2, { "ignoreComments": true} ],
      "class-methods-use-this": 0,
      "no-param-reassign": 0,
      "no-prototype-builtins": 0,
      "prefer-template": 0
    }
}
